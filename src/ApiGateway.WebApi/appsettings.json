{
  "Database": "sqlite", // Possible values: mssql, mysql, sqlite
  "ConnectionStrings": {
     "DefaultConnection": "DataSource=ApiGateway.db"
    // "DefaultConnection": "Data Source=(local);Database=apigateway;integrated security=sspi"
  },

  "LogSettings": {
    "UseElasticSearch": false,
    "ElasticSearchUrl": "http://localhost:9200",
    "LogEventLevel": 2, //0: Verbose, 1:Debug,, 2:Information, 3:Warning, 4:Error, 5:Fatal
    "IndexNamePrefix": "apigateway"
  },

  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  }
}
